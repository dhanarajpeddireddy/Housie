<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbg"
    android:padding="2dp"
    android:orientation="vertical"
    tools:context=".MainActivity">





    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Switch
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="@color/brown"
            android:layout_margin="5dp"
            android:id="@+id/switch_sound"
            android:layout_width="wrap_content"
            android:text="@string/sound"
            android:layout_height="wrap_content"
            tools:ignore="UseSwitchCompatOrMaterialXml" />


        <Switch
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="@color/brown"
            android:layout_margin="5dp"
            android:id="@+id/switch_hideGrid"
            android:layout_width="wrap_content"
            android:text="@string/board"
            android:layout_height="wrap_content"
            tools:ignore="UseSwitchCompatOrMaterialXml" />


        <Switch
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="@color/brown"
            android:id="@+id/switch_Auto"
            android:layout_width="wrap_content"
            android:text="@string/auto"
            android:layout_height="wrap_content"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <ImageView
            android:id="@+id/iv_restart"
            android:layout_margin="5dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_baseline_restore_24"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:tint="@color/whiteFont" />

    </LinearLayout>






    <TextView
        android:layout_gravity="center"
        android:background="@drawable/coin"
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="100sp"
        android:textStyle="bold|italic"
        app:fontFamily="@font/roboto_mono_bold_italic" />




        <GridView
            android:layout_weight="1"
            android:numColumns="10"
            android:id="@+id/gridView_RandomValuesList"
            android:layout_width="match_parent"
            android:layout_height="0dp" />






        <Button
            android:id="@+id/bt_random"
            android:layout_width="match_parent"
            android:text="@string/pick_coin"
            android:layout_height="wrap_content"
            tools:ignore="ButtonStyle" />


</LinearLayout>